{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
, "app/(auth)/sign-up/layout.js", "app/(auth)/sign-in/[[...sign-in]]/page.jsx", "components/header.jsx", "app/layout.tsx", "lib/prisma.js", "app/(main)/layout.js", "app/(main)/ai-cover-letter/[id]/page.jsx", "app/(main)/ai-cover-letter/page.jsx", "app/(main)/onboarding/page.jsx"  ],
  "exclude": ["node_modules"]
}
